# PostgreSQL Database Configuration
# Copy this file to .env and update with your actual database credentials

# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cryptoquant
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database Pool Configuration
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Optional: Database SSL Configuration (for production)
# DB_SSL=true
# DB_SSL_REJECT_UNAUTHORIZED=false

# Optional: Database Connection String (alternative to individual parameters)
# DATABASE_URL=postgresql://username:password@localhost:5432/cryptoquant

# Redis Configuration (for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Migration Configuration
# DB_MIGRATIONS_TABLE=migrations
# DB_MIGRATIONS_DIR=database/migrations